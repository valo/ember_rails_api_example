<section id="main">
  <ul id="projects-list">
    {{#each project in controller}}
      <li>
        <label>{{project.name}}</label><button {{action 'view'}} class="view">View</button><button {{action 'destroy'}} class="destroy">Delete</button>
      </li>
    {{/each}}
  </ul>
</section>
<section>
  <h2>Create Project</h2>
  <label>Name:</label>
  {{ input type="text" id="new-project" placeholder="Project name" value=newProjectName action="createProject" }}
</section>
